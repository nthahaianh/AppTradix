<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tradix.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_coinFragment"
            app:destination="@id/coinFragment" />
    </fragment>
    <fragment
        android:id="@+id/coinFragment"
        android:name="com.example.tradix.CoinFragment"
        android:label="CoinFragment"
        tools:layout="@layout/fragment_coin">
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="NEO INDEX"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.tradix.NewsFragment"
        android:label="NewsFragment"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_newsFragment_to_newsArticleFragmet"
            app:destination="@id/newsArticleFragmet" />
    </fragment>
    <fragment
        android:id="@+id/newsArticleFragmet"
        android:name="com.example.tradix.NewsArticleFragmet"
        android:label="NewsArticleFragmet"
        tools:layout="@layout/fragment_news_article">
        <argument
            android:name="newsTitle"
            android:defaultValue="true"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.tradix.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" />
</navigation>