<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".OnboardingActivity">

    <RelativeLayout
        android:id="@+id/onBoarding_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/onBoarding_ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/icons_8_expand_arrow" />

        <TextView
            android:id="@+id/onBoarding_tvSkip"
            style="@style/TextStyle75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:padding="3dp"
            android:text="Skip" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/onBoarding_btnNext"
        android:layout_below="@id/onBoarding_header" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/onBoarding_btnNext"
        android:layout_alignBottom="@+id/onBoarding_btnNext"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="45dp"
        android:gravity="left"
        app:ci_drawable_unselected="@drawable/oval"
        app:ci_drawable="@drawable/bg_circle_indicator" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/onBoarding_btnNext"
        style="@style/TextStyle34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="35dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rettangolo_27_2"
        android:paddingHorizontal="25dp"
        android:text="NEXT" />
</RelativeLayout>