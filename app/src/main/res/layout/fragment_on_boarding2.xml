<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_gruppo_di_maschere_3"
        app:layout_constraintBottom_toTopOf="@id/onBoarding2_tv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onBoarding2_tv1"
        style="@style/TextStyle76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:text="Follow our tips"
        app:layout_constraintBottom_toTopOf="@id/onBoarding2_tv2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/onBoarding2_tv2"
        style="@style/TextStyle76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:text="to achieve success!"
        app:layout_constraintBottom_toTopOf="@id/onBoarding2_tv3"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/onBoarding2_tv3"
        style="@style/TextStyle42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:text="Ex totam praesentium incidunt aut."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>