<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ConfirmActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_componente_6_7"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirm_tvTradix"
        style="@style/TextStyle40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRADIX"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/ic_coin"
        app:layout_constraintBottom_toBottomOf="@id/confirm_tvTradix"
        app:layout_constraintLeft_toRightOf="@id/confirm_tvTradix"
        app:layout_constraintTop_toTopOf="@+id/confirm_tvTradix" />

    <TextView
        style="@style/TextStyle41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yay! Your password has been"
        app:layout_constraintBottom_toTopOf="@id/confirm_tvChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_tvTradix"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/confirm_tvChange"
        style="@style/TextStyle41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changed!"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confirm_tvYouCan"
        style="@style/TextStyle42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can now log into your account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1" />

    <TextView
        style="@style/TextStyle42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with the new password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_tvYouCan" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_componente_5_2"
        app:layout_constraintBottom_toBottomOf="@id/line2"
        android:layout_marginVertical="80dp"
        android:rotation="180"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/line1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_pixeltrue_special_deals"
        app:layout_constraintBottom_toBottomOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/line1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_1"
        android:paddingVertical="5dp"
        android:text="LOGIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/line3"
        app:layout_constraintRight_toRightOf="@id/line4"
        app:layout_constraintTop_toTopOf="@id/line2" />
</androidx.constraintlayout.widget.ConstraintLayout>